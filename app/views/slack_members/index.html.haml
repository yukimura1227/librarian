- model_class = SlackMember
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:slack_id)
      %th= model_class.human_attribute_name(:slack_user_name)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @slack_members.each do |slack_member|
      %tr
        %td= link_to slack_member.id, slack_member_path(slack_member)
        %td= slack_member.slack_id
        %td= slack_member.slack_user_name
        %td= slack_member.user_id
        %td=l slack_member.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_slack_member_path(slack_member), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), slack_member_path(slack_member), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

