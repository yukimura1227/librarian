= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :order_time
    = f.text_field :order_time
  .field
    = f.label :state
    = f.number_field :state
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
