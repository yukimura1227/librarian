%h1 Listing orders

%table
  %thead
    %tr
      %th Title
      %th Order time
      %th State
      %th Url
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.title
        %td= order.order_time
        %td= order.state
        %td= order.url
        %td= link_to 'Show', order
        %td= link_to 'Edit', edit_order_path(order)
        %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }

