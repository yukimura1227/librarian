= form_for @book, html: {class: 'uk-form-stacked'} do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .uk-margin
    = f.label :title, class: 'uk-form-label'
    = f.text_field :title, class: 'uk-input'
  .uk-margin
    = f.label :location, class: 'uk-form-label'
    = f.text_area :location, class: 'uk-input'
  .uk-margin
    = f.submit '編集する'
